<main>
    <div class="container">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">

            <h1><i class="fa fa-beer" aria-hidden="true"></i> Add a new beer</h1>
            <form action="/create" method="post">
             <div class="form-group">
               <label for="name">Name</label>
               <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
             </div>
             <div class="form-group">
               <label for="type">Type</label>
               <input type="text" class="form-control" name="type" id="type" placeholder="Type of beer" required>
               <!-- <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"> -->
             </div>
             <div class="form-group">
               <label for="abv">ABV</label>
               <input type="text" class="form-control" name="abv" id="abv" placeholder="Alcohol percentage" required>
               <!-- <p class="help-block">Example block-level help text here.</p> -->
             </div>
             <label>I've tried this Beer ;)</label><br>
             <div class="radio-inline">
               <label>
                 {{#if beer.consumed}}
                   <input type="radio" name="consumed" value="1" checked>Yes<br>
                   <input type="radio" name="consumed" value="0">No<br>
                 {{else}}
                   <input type="radio" name="consumed" value="1" >Yes<br>
                   <input type="radio" name="consumed" value="0" checked>No<br>
                 {{/if}}
               </label>
             </div>
             <br>
             <br>
             <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
        <div class="col-sm-1"></div>
    </div>
</main>
